<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://s3-eu-west-1.amazonaws.com/prh-havanaclub-prod/s3fs-public-inter-prod/cocktail/Canchanchara-Cocktail-recipe-Havana-club.jpg');">
  <div class="banner-content">
    <h1>Mr Cocktail</h1>
  </div>
</div>
<div class="container">
  <div class="col-xs-12 text-center">
    <h2>All the cocktails</h2>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cocktail.photo %>');">
        <div class="card-description"><%= cocktail.name %></div>
        <%= link_to "", cocktail_path(cocktail.id), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
